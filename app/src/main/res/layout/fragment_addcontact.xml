<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gp.eece2019.wecare.calls.Addcontacts">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/editText_name"
        android:layout_width="290dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="120dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:hint="ENTER The Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="47dp" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_Tel"
        android:layout_marginStart="66dp"
        android:layout_marginTop="58dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Tel"
        android:layout_marginLeft="66dp" />

    <Button
        android:id="@+id/button_viewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText_Tel"
        android:layout_alignRight="@+id/editText_Tel"
        android:layout_alignTop="@+id/button_add"
        android:layout_marginStart="33dp"
        android:layout_marginTop="58dp"
        android:text="Contacts"
        app:layout_constraintStart_toEndOf="@+id/button_add"
        app:layout_constraintTop_toBottomOf="@+id/editText_Tel"
        android:layout_marginLeft="33dp" />

    <EditText
        android:id="@+id/editText_Tel"
        android:layout_width="290dp"
        android:layout_height="36dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="59dp"
        android:hint="ENTER The Phone Number"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_name"
        android:layout_marginLeft="47dp" />

</android.support.constraint.ConstraintLayout>
