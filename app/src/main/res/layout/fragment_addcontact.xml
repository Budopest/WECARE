<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCDF7EB"
    tools:context="com.gp.eece2019.wecare.calls.Addcontacts">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/editText_name"
        android:layout_width="290dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="120dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:hint="ENTER The Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_Tel"
        android:layout_marginEnd="52dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="52dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="56dp"
        android:text="Add"
        app:layout_constraintEnd_toStartOf="@+id/button_viewAll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Tel" />

    <Button
        android:id="@+id/button_viewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText_Tel"
        android:layout_alignRight="@+id/editText_Tel"
        android:layout_alignTop="@+id/button_add"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginTop="56dp"
        android:text="Contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Tel" />

    <EditText
        android:id="@+id/editText_Tel"
        android:layout_width="290dp"
        android:layout_height="36dp"
        android:layout_marginEnd="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:hint="ENTER The Phone Number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_name" />

</android.support.constraint.ConstraintLayout>
